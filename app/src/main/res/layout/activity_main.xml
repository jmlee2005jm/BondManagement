<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="빌려간 돈 관리"
        android:textSize="50dp"
        android:padding="30dp"/>

    <Button
        android:id="@+id/newInfo_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="새로운 정보 입력"
        android:textSize="30dp"
        android:padding="30dp"/>

    <Button
        android:id="@+id/sumLook_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="합계 보기"
       android:textSize="30dp"
        android:padding="15dp"/>

    <ImageButton
        android:id="@+id/loginImageButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/screenshot_login" />
    <ImageButton
        android:id="@+id/findIdPwButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/screenshot_findidpw" />
    <ImageButton
        android:id="@+id/newAccountButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/screenshot_newaccount" />
</LinearLayout>

