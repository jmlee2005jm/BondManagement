<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/newAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="회원가입"
        android:textSize="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:id="@+id/NewNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="20dp"
            android:padding="20dp"/>
        <EditText
            android:id="@+id/NewNameInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="입력하세요"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:id="@+id/NewIdInputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="20dp"
            android:padding="20dp"/>
        <EditText
            android:id="@+id/NewIdInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="입력하세요"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:id="@+id/NewPWInputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="20dp"
            android:padding="20dp"/>
        <EditText
            android:id="@+id/NewPWInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="입력하세요"/>
    </LinearLayout>
    <Button
        android:id="@+id/NewAccountConfirmBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:padding="30dp"
        android:textSize="25dp"
        android:background="#FFFFFF"
        android:textStyle="bold"/>
</LinearLayout>